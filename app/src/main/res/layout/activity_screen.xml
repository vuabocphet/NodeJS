<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Screen" android:background="@color/black">


    <ImageView
        android:layout_centerInParent="true"
        android:layout_width="110dp"
        android:layout_height="98dp"
        android:src="@drawable/logo_nodejs"
        android:id="@+id/logo_nodejs"/>

    <TextView
        android:textSize="18sp"
        android:id="@+id/txtJS"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/logo_nodejs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nodejs"
        android:textColor="@color/blue"/>


    <Button
        android:textColor="@color/blue"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/stylebutton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/start"
        android:text="@string/start"/>



</RelativeLayout>