<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" android:background="@color/black">



       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">
           <ProgressBar
               android:layout_marginTop="50dp"
               android:visibility="invisible"
               android:layout_centerHorizontal="true"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/loading"/>
           <Button
               android:layout_centerHorizontal="true"
               android:layout_marginTop="5dp"
               android:text="Thêm phòng"
               android:textColor="@color/white"
               android:background="@drawable/btn"
               android:layout_width="200dp"
               android:layout_height="wrap_content"
               android:id="@+id/addRoom"/>

           <Button
               android:visibility="invisible"
               android:layout_centerHorizontal="true"
               android:layout_marginTop="5dp"
               android:text="Thêm khách sạn"
               android:textColor="@color/white"
               android:background="@drawable/btn"
               android:layout_width="200dp"
               android:layout_height="wrap_content"
               android:id="@+id/addCate"/>




           <android.support.v7.widget.RecyclerView
               android:layout_marginTop="3dp"
               android:layout_below="@id/addRoom"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_margin="1.5dp"
               android:id="@+id/recyclerview"
               >

           </android.support.v7.widget.RecyclerView>

           <android.support.v7.widget.RecyclerView
               android:layout_marginTop="3dp"
               android:layout_below="@id/addRoom"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_margin="1.5dp"
               android:id="@+id/recyclerview2"
               >

           </android.support.v7.widget.RecyclerView>
           <android.support.v7.widget.RecyclerView
               android:visibility="invisible"
               android:layout_marginTop="3dp"
               android:layout_below="@id/addCate"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_margin="1.5dp"
               android:id="@+id/recyclerviewHotel"
               >

           </android.support.v7.widget.RecyclerView>
       </RelativeLayout>




</RelativeLayout>